    {
      "term_id": "T-FSA-004",
      "term_en": "Current Ratio",
      "term_ru": "Коэффициент текущей ликвидности",
      "definition_en": "Measure of short-term liquidity.",
      "definition_ru": "",
      "formula": "$Current\\ Ratio = \\frac{Current\\ Assets}{Current\\ Liabilities}$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "Простое деление",
        "steps": [
          "Current Ratio = Current Assets ÷ Current Liabilities",
          "Ввести Current Assets",
          "÷ Current Liabilities",
          "= Current Ratio"
        ],
        "example": "CA=$500,000, CL=$250,000 → 500000÷250000 = 2.0"
      }
    },
    {
      "term_id": "T-FSA-005",
      "term_en": "Quick Ratio",
      "term_ru": "Коэффициент быстрой ликвидности",
      "definition_en": "Liquidity measure excluding inventory.",
      "definition_ru": "",
      "formula": "$Quick\\ Ratio = \\frac{Cash + Receivables}{Current\\ Liabilities}$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "Простой расчёт",
        "steps": [
          "Quick Ratio = (Cash + Receivables) ÷ Current Liabilities",
          "1. Cash + Receivables = числитель",
          "2. ÷ Current Liabilities = Quick Ratio"
        ],
        "example": "Cash=$100K, AR=$150K, CL=$200K → (100+150)÷200 = 1.25"
      }
    },
    {
      "term_id": "T-FSA-006",
      "term_en": "ROE",
      "term_ru": "Рентабельность собственного капитала",
      "definition_en": "Return on Equity - profitability relative to shareholders' equity.",
      "definition_ru": "",
      "formula": "$ROE = \\frac{Net\\ Income}{Shareholders'\\ Equity}$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "Простое деление",
        "steps": [
          "ROE = Net Income ÷ Shareholders' Equity × 100%",
          "Ввести Net Income",
          "÷ Shareholders' Equity",
          "× 100 = ROE в %"
        ],
        "example": "NI=$50M, Equity=$400M → 50÷400×100 = 12.5%"
      }
    },
    {
      "term_id": "T-FSA-007",
      "term_en": "ROA",
      "term_ru": "Рентабельность активов",
      "definition_en": "Return on Assets - profitability relative to total assets.",
      "definition_ru": "",
      "formula": "$ROA = \\frac{Net\\ Income}{Total\\ Assets}$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "Простое деление",
        "steps": [
          "ROA = Net Income ÷ Total Assets × 100%"
        ],
        "example": "NI=$50M, Assets=$1B → 50÷1000×100 = 5%"
      }
    },
    {
      "term_id": "T-FSA-008",
      "term_en": "DuPont Analysis",
      "term_ru": "Анализ Дюпон",
      "definition_en": "Framework decomposing ROE into component ratios.",
      "definition_ru": "",
      "formula": "$ROE = \\frac{NI}{Sales} \\times \\frac{Sales}{Assets} \\times \\frac{Assets}{Equity}$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "Трёхкомпонентный расчёт",
        "steps": [
          "ROE = Profit Margin × Asset Turnover × Financial Leverage",
          "1. NI ÷ Sales = Profit Margin",
          "2. Sales ÷ Assets = Asset Turnover",
          "3. Assets ÷ Equity = Financial Leverage",
          "4. Перемножить все три = ROE"
        ],
        "example": "PM=5%, AT=1.5, FL=2 → 0.05×1.5×2 = 15%"
      }
    },
    {
