      "calculator_steps": null
    },
    {
      "term_id": "T-DER-004",
      "term_en": "Call Option",
      "term_ru": "Колл-опцион",
      "definition_en": "Right to buy underlying asset at strike price.",
      "definition_ru": "",
      "formula": "$Payoff = max(S_T - X, 0)$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "Прямой расчёт",
        "steps": [
          "Payoff при исполнении = max(ST - X, 0)",
          "Profit = Payoff - Premium paid",
          "Если ST > X: Payoff = ST - X",
          "Если ST ≤ X: Payoff = 0 (не исполняем)"
        ],
        "example": "ST=$55, X=$50, Premium=$3 → Payoff=5, Profit=5-3=$2"
      }
    },
    {
      "term_id": "T-DER-005",
      "term_en": "Put Option",
      "term_ru": "Пут-опцион",
      "definition_en": "Right to sell underlying asset at strike price.",
      "definition_ru": "",
      "formula": "$Payoff = max(X - S_T, 0)$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "Прямой расчёт",
        "steps": [
          "Payoff при исполнении = max(X - ST, 0)",
          "Profit = Payoff - Premium paid",
          "Если ST < X: Payoff = X - ST",
          "Если ST ≥ X: Payoff = 0 (не исполняем)"
        ],
        "example": "ST=$45, X=$50, Premium=$2 → Payoff=5, Profit=5-2=$3"
      }
    },
    {
      "term_id": "T-DER-006",
      "term_en": "Strike Price",
      "term_ru": "Цена исполнения",
      "definition_en": "Price at which option can be exercised.",
      "definition_ru": "",
      "formula": null,
      "module_id": 1,
      "related_los": [],
      "calculator_steps": null
    },
    {
      "term_id": "T-DER-007",
      "term_en": "Premium",
      "term_ru": "Премия опциона",
      "definition_en": "Price paid for the option contract.",
      "definition_ru": "",
      "formula": null,
      "module_id": 1,
      "related_los": [],
      "calculator_steps": null
    },
    {
      "term_id": "T-DER-008",
      "term_en": "Intrinsic Value",
      "term_ru": "Внутренняя стоимость",
      "definition_en": "Value if option exercised immediately.",
      "definition_ru": "",
      "formula": null,
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "Прямой расчёт",
        "steps": [
          "Call: IV = max(S - X, 0)",
          "Put: IV = max(X - S, 0)",
          "S = текущая цена актива",
          "X = страйк"
        ],
        "example": "Call: S=$52, X=$50 → IV = $2"
      }
    },
    {
      "term_id": "T-DER-009",
      "term_en": "Time Value",
      "term_ru": "Временная стоимость",
      "definition_en": "Option premium minus intrinsic value.",
      "definition_ru": "",
      "formula": null,
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "Прямой расчёт",
        "steps": [
          "Time Value = Premium - Intrinsic Value"
        ],
        "example": "Premium=$5, IV=$2 → Time Value = $3"
      }
    },
    {
      "term_id": "T-DER-010",
      "term_en": "Put-Call Parity",
      "term_ru": "Паритет пут-колл",
      "definition_en": "Relationship between put and call prices.",
      "definition_ru": "",
      "formula": "$C + PV(X) = P + S$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "TVM для PV(X)",
        "steps": [
          "C + PV(X) = P + S",
          "Для расчёта PV(X):",
          "FV = X (страйк)",
          "I/Y = безрисковая ставка",
          "N = время до экспирации",
          "PMT = 0",
          "[CPT] [PV] = приведённая стоимость страйка",
          "Затем: C = P + S - PV(X) или P = C + PV(X) - S"
        ],
        "example": "X=$50, r=5%, T=0.5: PV(X)=50/(1.05)^0.5=$48.79"
      }
    },
