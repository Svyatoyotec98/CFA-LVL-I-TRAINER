    {
      "term_id": "T-DER-001",
      "term_en": "Forward Contract",
      "term_ru": "Форвардный контракт",
      "definition_en": "Agreement to buy/sell asset at future date at agreed price.",
      "definition_ru": "",
      "formula": null,
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "TVM",
        "steps": [
          "Forward Price = Spot × (1 + r)^T",
          "Или через TVM:",
          "PV = -Spot Price",
          "I/Y = безрисковая ставка",
          "N = время до исполнения",
          "[CPT] [FV] = Forward Price"
        ],
        "example": "Spot=$100, r=5%, T=1 → FV = $105"
      }
    },
    {
