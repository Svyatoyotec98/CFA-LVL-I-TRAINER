    {
      "term_id": "T-EQ-002",
      "term_en": "Preferred Stock",
      "term_ru": "Привилегированные акции",
      "definition_en": "Shares with priority dividend but usually no voting rights.",
      "definition_ru": "Акции с приоритетом на дивиденды, но без права голоса.",
      "formula": null,
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "TVM (как перпетуитет)",
        "steps": [
          "Цена привилегированной акции = D / r",
          "где D = дивиденд, r = требуемая доходность",
          "На калькуляторе: D ÷ r = цена"
        ],
        "example": "D=$5, r=8% → 5÷0.08 = $62.50"
      }
    },
    {
      "term_id": "T-EQ-003",
      "term_en": "Dividend Discount Model (DDM)",
      "term_ru": "Модель дисконтирования дивидендов",
      "definition_en": "Valuation model based on present value of future dividends.",
      "definition_ru": "Оценка акции как PV будущих дивидендов.",
      "formula": "$P_0 = \\frac{D_1}{r - g}$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "Прямой расчёт",
        "steps": [
          "P₀ = D₁ / (r - g)",
          "1. Вычислить D₁ = D₀ × (1 + g) если нужно",
          "2. Вычислить (r - g)",
          "3. D₁ ÷ (r - g) = цена акции"
        ],
        "example": "D₁=$2.10, r=12%, g=5% → 2.10÷(0.12-0.05) = 2.10÷0.07 = $30"
      }
    },
    {
      "term_id": "T-EQ-004",
      "term_en": "Gordon Growth Model",
      "term_ru": "Модель Гордона",
      "definition_en": "DDM assuming constant dividend growth rate.",
      "definition_ru": "",
      "formula": "$P_0 = \\frac{D_0(1+g)}{r - g}$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "Прямой расчёт",
        "steps": [
          "P₀ = D₀(1+g) / (r - g)",
          "1. D₀ × (1 + g) = D₁",
          "2. r - g = знаменатель",
          "3. D₁ ÷ знаменатель = P₀"
        ],
        "example": "D₀=$2, g=5%, r=12% → 2×1.05÷0.07 = $30"
      }
    },
    {
      "term_id": "T-EQ-005",
      "term_en": "Free Cash Flow (FCF)",
      "term_ru": "Свободный денежный поток",
      "definition_en": "Cash available after capital expenditures.",
      "definition_ru": "",
      "formula": "$FCF = CFO - CapEx$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": null
    },
    {
      "term_id": "T-EQ-006",
      "term_en": "FCFE",
      "term_ru": "Свободный денежный поток на собственный капитал",
      "definition_en": "Free Cash Flow to Equity.",
      "definition_ru": "",
      "formula": "$FCFE = CFO - CapEx + Net\\ Borrowing$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "CF (для оценки)",
        "steps": [
          "После расчёта FCFE для каждого года:",
          "[CF] - Cash Flow worksheet",
          "CF0 = 0 (или начальные инвестиции)",
          "Ввести FCFE для каждого года как C01, C02...",
          "Добавить терминальную стоимость к последнему CF",
          "[NPV] I = требуемая доходность на equity",
          "[CPT] = стоимость equity"
        ],
        "example": "FCFE: 10, 12, 14 + TV=200, r=10% → NPV"
      }
    },
    {
      "term_id": "T-EQ-007",
      "term_en": "FCFF",
      "term_ru": "Свободный денежный поток фирмы",
      "definition_en": "Free Cash Flow to Firm.",
      "definition_ru": "",
      "formula": "$FCFF = EBIT(1-t) + Depreciation - CapEx - \\Delta WC$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "CF (для оценки)",
        "steps": [
          "После расчёта FCFF для каждого года:",
          "[CF] - Cash Flow worksheet",
          "Ввести FCFF как денежные потоки",
          "Добавить терминальную стоимость",
          "[NPV] I = WACC",
          "[CPT] = стоимость фирмы (EV)",
          "Equity = EV - Debt"
