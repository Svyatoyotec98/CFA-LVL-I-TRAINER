  "terms": [
    {
      "term_id": "T-QM-001",
      "term_en": "Holding Period Return (HPR)",
      "term_ru": "Доходность за период владения",
      "definition_en": "The return earned from holding an asset for a specified period.",
      "definition_ru": "",
      "formula": "$HPR = \\frac{P_1 - P_0 + D}{P_0}$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": null
    },
    {
      "term_id": "T-QM-002",
      "term_en": "Effective Annual Rate (EAR)",
      "term_ru": "Эффективная годовая ставка",
      "definition_en": "The annual rate of return accounting for compounding effects.",
      "definition_ru": "",
      "formula": "$EAR = (1 + \\frac{r}{m})^m - 1$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "Interest Conversion",
        "steps": [
          "[2ND] [ICONV] - открыть Interest Conversion",
          "Ввести NOM (номинальную ставку) [ENTER]",
          "[↓][↓] Ввести C/Y (периоды начисления в год) [ENTER]",
          "[↑] на EFF, нажать [CPT]",
          "Результат: EFF = эффективная годовая ставка"
        ],
        "example": "NOM=12%, C/Y=12 → EFF=12.68%"
      }
    },
    {
      "term_id": "T-QM-003",
      "term_en": "Present Value (PV)",
      "term_ru": "Приведённая стоимость",
      "definition_en": "The current worth of a future sum of money given a rate of return.",
      "definition_ru": "",
      "formula": "$PV = \\frac{FV}{(1+r)^n}$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "TVM",
        "steps": [
          "[2ND] [CLR TVM] - очистить TVM",
          "Ввести N (число периодов) [N]",
          "Ввести I/Y (ставку) [I/Y]",
          "Ввести FV (будущую стоимость) [FV]",
          "Ввести PMT=0 [PMT]",
          "[CPT] [PV] - рассчитать PV"
        ],
        "example": "N=5, I/Y=10, FV=1000, PMT=0 → PV=-620.92"
      }
    },
    {
      "term_id": "T-QM-004",
      "term_en": "Future Value (FV)",
      "term_ru": "Будущая стоимость",
      "definition_en": "The value of money at a future date based on growth rate.",
      "definition_ru": "",
      "formula": "$FV = PV \\times (1+r)^n$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "TVM",
        "steps": [
          "[2ND] [CLR TVM] - очистить TVM",
          "Ввести N (число периодов) [N]",
          "Ввести I/Y (ставку) [I/Y]",
          "Ввести PV со знаком минус [+/-] [PV]",
          "Ввести PMT=0 [PMT]",
          "[CPT] [FV] - рассчитать FV"
        ],
        "example": "N=5, I/Y=10, PV=-1000, PMT=0 → FV=1610.51"
      }
    },
    {
      "term_id": "T-QM-005",
      "term_en": "Net Present Value (NPV)",
      "term_ru": "Чистая приведённая стоимость",
      "definition_en": "The difference between present value of cash inflows and outflows.",
      "definition_ru": "",
      "formula": "$NPV = \\sum \\frac{CF_t}{(1+r)^t}$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "Cash Flow",
        "steps": [
          "[CF] - открыть Cash Flow worksheet",
          "Ввести CF0 (начальные инвестиции, обычно минус) [ENTER]",
          "[↓] Ввести C01 [ENTER], [↓] F01 [ENTER]",
          "Повторить для всех CF",
          "[NPV] Ввести I (ставку дисконтирования) [ENTER]",
          "[↓] [CPT] - рассчитать NPV"
        ],
        "example": "CF0=-100, C01=30, F01=5, I=10 → NPV=13,723.60"
      }
    },
    {
      "term_id": "T-QM-006",
      "term_en": "Internal Rate of Return (IRR)",
      "term_ru": "Внутренняя норма доходности",
      "definition_en": "The discount rate that makes NPV equal to zero.",
      "definition_ru": "",
      "formula": "$\\sum \\frac{CF_t}{(1+IRR)^t} = 0$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "Cash Flow",
        "steps": [
          "[CF] - открыть Cash Flow worksheet",
          "Ввести CF0 (начальные инвестиции со знаком минус) [ENTER]",
          "[↓] Ввести C01 [ENTER], [↓] F01 [ENTER]",
          "Повторить для всех денежных потоков",
          "[IRR] [CPT] - рассчитать IRR"
        ],
        "example": "CF0=-100, C01=30, F01=5 → IRR=15.24%"
      }
    },
    {
      "term_id": "T-QM-007",
      "term_en": "Standard Deviation (σ)",
      "term_ru": "Стандартное отклонение",
      "definition_en": "A measure of dispersion of returns around the mean.",
      "definition_ru": "",
      "formula": "$\\sigma = \\sqrt{\\frac{\\sum(x_i - \\bar{x})^2}{n}}$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "Statistics",
        "steps": [
          "[2ND] [DATA] - открыть Data worksheet",
