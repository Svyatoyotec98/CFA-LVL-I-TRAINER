    {
      "formula_id": "QM-001",
      "name_en": "Holding Period Return (HPR)",
      "name_ru": "Доходность за период владения",
      "book_id": 1,
      "formula_latex": "$HPR = \\frac{P_1 - P_0 + D_1}{P_0}$",
      "variables": {
        "P_1": "Ending price / Конечная цена",
        "P_0": "Beginning price / Начальная цена",
        "D_1": "Dividend or cash flow / Дивиденд или денежный поток"
      }
    },
    {
      "formula_id": "QM-002",
      "name_en": "Arithmetic Mean Return",
      "name_ru": "Среднее арифметическое доходности",
      "book_id": 1,
      "formula_latex": "$\\bar{R} = \\frac{1}{T} \\sum_{t=1}^{T} R_t$",
      "variables": {
        "R_t": "Return in period t / Доходность в периоде t",
        "T": "Number of periods / Количество периодов"
      }
    },
    {
      "formula_id": "QM-003",
      "name_en": "Geometric Mean Return",
      "name_ru": "Среднее геометрическое доходности",
      "book_id": 1,
      "formula_latex": "$R_G = \\sqrt[T]{\\prod_{t=1}^{T}(1+R_t)} - 1 = \\left[\\prod_{t=1}^{T}(1+R_t)\\right]^{1/T} - 1$",
      "variables": {
        "R_t": "Return in period t / Доходность в периоде t",
        "T": "Number of periods / Количество периодов"
      }
    },
    {
      "formula_id": "QM-004",
