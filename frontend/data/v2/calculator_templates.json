{
  "calculator_model": "BA II Plus Professional",
  "common_worksheets": {
    "tvm": {
      "name": "Time Value of Money (TVM)",
      "access": "[2ND] [CLR TVM]",
      "keys": ["N", "I/Y", "PV", "PMT", "FV", "CPT"],
      "description": "Calculate present value, future value, interest rates, number of periods, and payments"
    },
    "cf": {
      "name": "Cash Flow (CF)",
      "access": "[CF]",
      "keys": ["CF", "F", "NPV", "IRR", "CPT"],
      "description": "Calculate NPV and IRR for uneven cash flows"
    },
    "data": {
      "name": "Statistics (DATA)",
      "access": "[2ND] [DATA]",
      "keys": ["X", "Y", "STAT"],
      "description": "Calculate mean, standard deviation, regression statistics"
    },
    "bond": {
      "name": "Bond Worksheet",
      "access": "[2ND] [BOND]",
      "keys": ["SDT", "CPN", "RDT", "RV", "YLD", "PRI"],
      "description": "Calculate bond prices and yields"
    }
  },
  "common_functions": {
    "percent_change": {
      "name": "Percent Change",
      "keys": ["[2ND] [%CHG]"],
      "description": "Calculate percentage change between two values"
    },
    "date": {
      "name": "Date Calculations",
      "keys": ["[2ND] [DATE]"],
      "description": "Calculate days between dates (ACT, 360, 365)"
    },
    "format": {
      "name": "Decimal Format",
      "keys": ["[2ND] [FORMAT]"],
      "description": "Set number of decimal places"
    },
    "memory": {
      "name": "Memory Storage",
      "keys": ["[STO]", "[RCL]"],
      "description": "Store and recall values (up to 10 memories: 0-9)"
    }
  },
  "shortcuts": {
    "clear_all": "[2ND] [CLR WORK]",
    "clear_tvm": "[2ND] [CLR TVM]",
    "reset": "[2ND] [RESET]",
    "quit": "[2ND] [QUIT]"
  },
  "templates": {
    "DIRECT_HPR": {
      "method": "Direct Calculation",
      "steps": [
        "Введите начальную цену: {P0} [÷] [1] [=] [STO] [1]",
        "Введите конечную цену: {P1} [-] [RCL] [1] [=]",
        "Добавьте доход: [+] {D1} [=]",
        "Разделите на начальную цену: [÷] [RCL] [1] [=]",
        "Результат: HPR в десятичной форме"
      ],
      "example": {
        "given": "P0=$50, P1=$56, D1=$2",
        "input": "50÷1=STO1, 56-RCL1=6, +2=8, ÷RCL1=",
        "result": "HPR = 0.16 = 16%"
      }
    },
    "STAT_mean": {
      "method": "Statistics Worksheet",
      "access": "[2ND] [DATA]",
      "steps": [
        "Очистите данные: [2ND] [CLR WORK]",
        "Введите первое значение: {X1} [ENTER] [↓]",
        "Введите второе значение: {X2} [ENTER] [↓]",
        "Повторите для всех значений",
        "Вычислите среднее: [2ND] [STAT] [↓] [↓] (выберите X̄) [CPT]"
      ],
      "example": {
        "given": "Values: 5%, 8%, -2%, 10%",
        "input": "5 ENTER ↓, 8 ENTER ↓, -2 ENTER ↓, 10 ENTER ↓, 2ND STAT ↓↓ CPT",
        "result": "Mean = 5.25%"
      }
    },
    "DIRECT_geometric_mean": {
      "method": "Direct Calculation",
      "steps": [
        "Конвертируйте каждую доходность в (1 + R): {R1} [+] [1] [=]",
        "Перемножьте все факторы: [×] [(] {R2} [+] [1] [)] [×] ... [=]",
        "Возьмите корень n-й степени: [yˣ] [(] [1] [÷] {n} [)] [=]",
        "Вычтите 1: [-] [1] [=]",
        "Результат: среднее геометрическое"
      ],
      "example": {
        "given": "Returns: 10%, 5%, -3% (3 periods)",
        "input": "1.10 × 1.05 × 0.97 = 1.12035, 1.12035 yˣ (1÷3) = 1.0385, - 1 =",
        "result": "3.85%"
      }
    },
    "CF_IRR": {
      "method": "Cash Flow Worksheet",
      "access": "[CF]",
      "steps": [
        "Очистите регистры: [2ND] [CLR WORK]",
        "Введите CF0 (начальная инвестиция): [CF] {CF0} [ENTER] [↓]",
        "Введите CF1: {CF1} [ENTER] [↓]",
        "Введите частоту F1 (если нужно): {F1} [ENTER] [↓]",
        "Повторите для всех денежных потоков",
        "Вычислите IRR: [IRR] [CPT]"
      ],
      "example": {
        "given": "CF0=-1000, CF1=300, CF2=400, CF3=500",
        "input": "CF -1000 ENTER ↓, 300 ENTER ↓↓, 400 ENTER ↓↓, 500 ENTER, IRR CPT",
        "result": "IRR = 12.53%"
      }
    },
    "DIRECT_EAR": {
      "method": "Direct Calculation",
      "steps": [
        "Разделите ставку на частоту: {rs} [÷] {m} [=]",
        "Добавьте 1: [+] [1] [=]",
        "Возведите в степень m: [yˣ] {m} [=]",
        "Вычтите 1: [-] [1] [=]",
        "Результат: EAR в десятичной форме"
      ],
      "example": {
        "given": "Stated rate = 8%, compounded quarterly (m=4)",
        "input": "0.08 ÷ 4 = 0.02, + 1 = 1.02, yˣ 4 = 1.0824, - 1 =",
        "result": "EAR = 8.24%"
      }
    },
    "DIRECT_continuous_return": {
      "method": "Direct Calculation",
      "steps": [
        "Разделите конечную цену на начальную: {P1} [÷] {P0} [=]",
        "Возьмите натуральный логарифм: [LN]",
        "Результат: непрерывно начисляемая доходность"
      ],
      "example": {
        "given": "P0=$50, P1=$56",
        "input": "56 ÷ 50 = 1.12, LN =",
        "result": "11.33%"
      }
    }
  }
}
