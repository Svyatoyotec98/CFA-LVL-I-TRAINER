    {
      "id": "QM-001",
      "name_en": "Mean (Average)",
      "name_ru": "Среднее значение",
      "book_id": 1,
      "category": "Statistics",
      "formula": "\\bar{X} = \\frac{\\sum_{i=1}^{n} X_i}{n}",
      "description": "The arithmetic mean is the sum of all values divided by the number of values.",
      "calculator_category": "worksheet",
      "calculator_template": "STAT_mean",
      "variables": [
        {
          "symbol": "\\bar{X}",
          "name": "X-bar",
          "description": "Sample mean / Среднее значение выборки"
        },
        {
          "symbol": "X_i",
          "name": "X sub i",
          "description": "Individual observation / Отдельное наблюдение"
        },
        {
          "symbol": "n",
          "name": "n",
          "description": "Number of observations / Количество наблюдений"
        }
      ],
      "example": "For data set {2, 4, 6, 8}: Mean = (2+4+6+8)/4 = 5"
    },
    {
      "id": "QM-002",
      "name_en": "Variance",
      "name_ru": "Дисперсия",
      "book_id": 1,
      "category": "Statistics",
      "formula": "s^2 = \\frac{\\sum_{i=1}^{n} (X_i - \\bar{X})^2}{n-1}",
      "description": "Sample variance measures the dispersion of data points around the mean.",
      "calculator_category": "worksheet",
      "calculator_template": "STAT_variance",
      "variables": [
        {
          "symbol": "s^2",
          "name": "s-squared",
          "description": "Sample variance / Дисперсия выборки"
        },
        {
          "symbol": "X_i",
          "name": "X sub i",
          "description": "Individual observation / Отдельное наблюдение"
        },
        {
          "symbol": "\\bar{X}",
          "name": "X-bar",
          "description": "Sample mean / Среднее значение выборки"
        },
        {
          "symbol": "n",
          "name": "n",
          "description": "Number of observations / Количество наблюдений"
        }
      ]
    },
    {
