    },
    {
      "term_id": "T-DER-003",
      "term_en": "Option",
      "term_ru": "Опцион",
      "definition_en": "Right but not obligation to buy/sell at specified price.",
      "definition_ru": "",
      "formula": null,
      "module_id": 1,
