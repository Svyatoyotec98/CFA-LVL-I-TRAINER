    {
      "term_id": "T-ECON-004",
      "term_en": "Price Elasticity of Demand",
      "term_ru": "Ценовая эластичность спроса",
      "definition_en": "Measure of responsiveness of quantity demanded to price changes.",
      "definition_ru": "Процентное изменение спроса при изменении цены на 1%.",
      "formula": "$E_d = \\frac{\\%\\Delta Q_d}{\\%\\Delta P}$",
      "module_id": 1,
      "related_los": [],
      "calculator_steps": {
        "worksheet": "Прямой расчёт",
        "steps": [
          "Ed = (ΔQ/Q) / (ΔP/P)",
          "Или: Ed = (Q2-Q1)/((Q2+Q1)/2) ÷ (P2-P1)/((P2+P1)/2)",
          "Midpoint formula для точности"
        ],
        "example": "Q: 100→80, P: $10→$12 → Ed = -20%/20% = -1.0"
      }
    },
    {
      "term_id": "T-ECON-005",
